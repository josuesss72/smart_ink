---
import Layout from '../layouts/Layout.astro';
import AboutArtist from '../components/AboutArtist.astro'
import Channels from '../components/Channels.astro'
---

<Layout title="Josue Sarmiento">
	<main>
		<AboutArtist/>
		<Channels/>
	</main>
</Layout>

<style>
	main {
		color: white;
		font-size: 20px;
		display: grid;
		height: 100vh;
		grid-template-columns: 1fr;
		grid-template-rows: 1fr 3fr;
		flex-direction: column;
		margin: 3rem;
	}
	@media (max-width: 700px) {
		main {
			gap: 2rem;
		}
	}
	
</style>
