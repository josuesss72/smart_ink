---

const channels = [
  {icon: 'arcticons:claro-movel', name: "Claro Music", link: "https://www.claromusica.com/artist/10542663/CO" },
  {icon: 'jam:deezer', name: "Deezer", link: "https://deezer.page.link/uw7U6pe8VV39GJCe6" },
  {icon: 'ic:baseline-apple',name: 'Apple Music', link: 'https://music.apple.com/co/artist/josue-sarmiento-vides/1719737236'},
  {icon: 'simple-icons:youtubemusic', name: 'Youtube Music', link: 'https://music.youtube.com/watch?v=Nc7VnQWQr9o&si=B4KC82WxMhlnFRU4' }
];

---

<div>
	<ul>
		<li>
			<iframe aria-label="spotify" id="lista-spotify" style="border-radius:12px" src="https://open.spotify.com/embed/artist/4i9rsRtdl1578BY1wpsTjj?utm_source=generator&theme=0" width="100%" height="352" allowfullscreen="" allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture" loading="lazy"></iframe>
		</li>
		{channels.map((channel) => <li><a href={channel.link}><iconify-icon icon={channel.icon}></iconify-icon>{channel.name}</a></li>)}
	</ul>
</div>

<style>
	ul {
		max-width: 700px;
		list-style: none;
		display: flex;
		flex-direction: column;
		gap: 1rem;
		margin: 0 auto 0 auto;
	}
	a {
		background-color: #183D3D;
		padding: 1rem;
		border-radius: 1rem;
		font-size: 25px;
		display: flex;
		align-items: center;
		gap: 0.5rem;
	}
	li {
		animation: select-out 0.5s ease reverse forwards;
	}
	li:hover {
		animation: select 0.5s ease forwards;
	}
	@keyframes select {
		from{
			transform: scale(1);
		}
		to {
			transform: scale(1.02);
		}
	}
	@keyframes select-out {
		from{
			transform: scale(1);
		}
		to {
			transform: scale(1.02);
		}
	}
	.icon {
		width: 20px;
	}
	iframe {
		border: 0;
	}
</style>


